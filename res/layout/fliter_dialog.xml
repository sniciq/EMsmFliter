<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView android:text="@string/dialog_type" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <Spinner android:id="@+id/dialog_flitertype"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        />
    
    
    <TextView android:text="@string/dialog_fliterinfo" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText 
        android:id="@+id/dialog_fliterinfo"
        android:inputType="textMultiLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>